<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <title>URL Shortener</title>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center p-4">
  <div class="w-full max-w-2xl bg-white shadow-lg rounded-lg p-6">

    <h1 class="text-3xl font-bold text-blue-700 mb-6 text-center">ðŸ”— URL Shortener</h1>

    <!-- Form Section -->
    <form action="/shortUrls" method="POST" class="flex flex-col sm:flex-row gap-4 mb-8">
      <input
        type="url"
        name="fullUrl"
        placeholder="Enter a long URL"
        required
        class="flex-1 px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
      <button
        type="submit"
        class="px-6 py-2 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 transition"
      >
        Shorten
      </button>
    </form>

    <!-- Table Section -->
    <div class="overflow-x-auto">
      <table class="min-w-full table-auto text-left border border-gray-200">
        <thead class="bg-blue-100">
          <tr>
            <th class="px-4 py-2 border-b font-semibold text-gray-700">Full URL</th>
            <th class="px-4 py-2 border-b font-semibold text-gray-700">Shortened URL</th>
            <th class="px-4 py-2 border-b font-semibold text-gray-700 text-center">Clicks</th>
          </tr>
        </thead>
        <tbody class="bg-white">
          <% shortUrls.forEach(shortUrl =>{ %>
            <tr class="hover:bg-gray-50">
            <td class="px-4 py-2 border-b text-blue-600">
              <a href=<%= shortUrl.fullUrl %> target="_blank">
                <%= shortUrl.fullUrl %> 
              </a>
            </td>
            <td class="px-4 py-2 border-b text-green-600">
              <a href=<%= shortUrl.short %> target="_blank"><%= shortUrl.short %></a>
            </td>
            <td class="px-4 py-2 border-b text-center"><%= shortUrl.click %></td>
          </tr>

          <%}) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
